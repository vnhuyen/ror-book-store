<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Users</h1>
    <%= link_to 'New user', signup_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%# <button data-modal-target="defaultModal" data-modal-toggle="defaultModal" class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
      New User
    </button> %>
  </div>
  <div id="users" class="min-w-full">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-5">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mb-4">
        <thead class="text-xs text-white uppercase bg-blue-600 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Email
            </th>
            <th scope="col" class="px-6 py-3">
              <div class="flex items-center">
                Role
              </div>
            </th>
            <th scope="col" class="px-6 py-3">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700" id="<%= dom_id user %>">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= user.email %>
              </th>
              <td class="px-6 py-4">
                User
              </td>
              <td class="px-6 py-4 text-right">
                <div class="flex items-center justify-center">
                  <%= link_to edit_user_path(user) do %>
                    <i class="ri-edit-fill text-lg pr-2"></i>
                  <% end %>
                  <i class="ri-delete-bin-5-fill text-lg cursor-pointer" data-modal-target="popup-modal" data-modal-toggle="popup-modal" ></i>
                </div>
              </td>
            </div>
          <% end %>
        </tbody>
      </table>
      <div class="px-4 pb-4"><%== pagy_nav(@pagy) %></div>
    </div>
  </div>
</div>
